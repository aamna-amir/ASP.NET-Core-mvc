@page
@model WebApplication1.Pages.BookList.IndexModel
@{
}
<br />
<h2>Book List</h2>
<br />

@if(Model.Message != null)
{
    <div class="alert alert-info alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
        @Model.Message
    </div>
}

<a asp-page="create" class="btn btn-primary">Create New Book</a>

@if (Model.Books.Count() > 0)
{
    <br /><br />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.Books.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Books.FirstOrDefault().ISBN)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Books.FirstOrDefault().Author)
            </th>
        </tr>
        @foreach (var item in Model.Books)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.ISBN)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Author)
                </td>
            </tr>
        }
    </table>
    <br /><br />
}
else
{
    <div>No Books</div>
} 